{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "typedocOptions": {
    "name": "baggie",
    "readme": "./README.md",
    "mode": "modules",
    "out": "docs",
    "exclude": "**/src/index.ts",
    "external-modulemap":  ".*packages\/([^\/]+)\/.*",
    "categorizeByGroup": true,
    "excludeNotExported": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "includeVersion": true,
    "stripInternal": true
  },
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
